{
  "name": "appium-ard",
  "version": "1.0.0",
  "description": "Appium test automation project with JavaScript and WebdriverIO",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "mocha",
    "test": "node tests/one.js",
    "test:report": "allure generate reports/allure-results --clean -o reports/allure-report && allure open reports/allure-report",
    "report:open": "start reports/appium-test-report.html",
    "clean": "rm -rf node_modules reports/allure-results reports/allure-report",
    "lint": "eslint . --ext .js",
    "wdio": "wdio run ./wdio.conf.js"
  },
  "keywords": [
    "appium",
    "webdriverio",
    "typescript",
    "mobile-testing",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@wdio/allure-reporter": "^8.24.0",
    "@wdio/globals": "^8.24.0",
    "allure-commandline": "^2.24.0",
    "chai": "^4.3.10",
    "dotenv": "^17.2.3",
    "imap": "^0.8.19",
    "mailparser": "^3.9.0",
    "mailslurp-client": "^16.0.0",
    "node-geocoder": "^4.4.1",
    "pino": "^10.1.0",
    "webdriverio": "^8.46.0"
  },
  "devDependencies": {
    "@wdio/appium-service": "^9.20.1",
    "@wdio/cli": "^9.20.1",
    "@wdio/local-runner": "^9.20.1",
    "@wdio/mocha-framework": "^9.20.1",
    "@wdio/spec-reporter": "^9.20.0",
    "appium": "^3.1.0",
    "appium-uiautomator2-driver": "^6.3.0",
    "eslint": "^8.54.0",
    "mocha": "^11.7.5",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.1.0",
    "mochawesome-report-generator": "^6.3.2"
  }
}
