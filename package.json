{
  "name": "appium-ard",
  "version": "1.0.0",
  "description": "Appium test automation project with TypeScript and WebdriverIO",
  "main": "index.js",
  "scripts": {
    "test": "wdio run config/wdio.conf.ts",
    "test:android": "wdio run config/wdio.conf.ts --spec tests/**/*.spec.ts",
    "test:ios": "wdio run config/wdio.conf.ts --spec tests/**/*.spec.ts",
    "test:report": "allure generate reports/allure-results --clean -o reports/allure-report && allure open reports/allure-report",
    "clean": "rm -rf node_modules reports/allure-results reports/allure-report",
    "lint": "eslint . --ext .ts",
    "build": "tsc"
  },
  "keywords": [
    "appium",
    "webdriverio",
    "typescript",
    "mobile-testing",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@wdio/allure-reporter": "^8.24.0",
    "@wdio/appium-service": "^8.24.0",
    "@wdio/cli": "^8.24.0",
    "@wdio/globals": "^8.24.0",
    "@wdio/local-runner": "^8.24.0",
    "@wdio/mocha-framework": "^8.24.0",
    "@wdio/spec-reporter": "^8.24.0",
    "@wdio/types": "^8.24.0",
    "allure-commandline": "^2.24.0",
    "appium": "^2.2.1",
    "chai": "^4.3.10",
    "dotenv": "^17.2.3",
    "ts-node": "^10.9.2",
    "webdriverio": "^8.24.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  }
}
